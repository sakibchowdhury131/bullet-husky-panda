<launch>

<rosparam file="$(find panda_with_bat_description)/launch/controller.yaml" command="load"/>
<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="panda_with_bat" args="panda_joint0_position_controller panda_joint1_position_controller panda_joint2_position_controller panda_joint3_position_controller panda_joint4_position_controller panda_joint5_position_controller panda_joint6_position_controller joint_state_controller "/>
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <remap from="/joint_states" to="/panda_with_bat/joint_states"/>
</node>

</launch>